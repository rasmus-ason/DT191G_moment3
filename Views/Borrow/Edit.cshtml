@model Dt191G_moment3.Models.Borrow

@{
    ViewData["Title"] = "Låna album";

    @* var id = ViewContext.RouteData.Values["id"] as string; *@


}

<h1>Redigera utlåning</h1>
<p>Ändra vem albumet lånas ut till</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="AlbumId" />

            <input type="hidden" asp-for="BorrowedDate" />
            <div class="form-group">
                <label asp-for="BorrowedTitle" class="control-label"></label>
                <input readonly asp-for="BorrowedTitle" class="form-control" />
                <span asp-validation-for="BorrowedTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorrowedArtist" class="control-label"></label>
                <input readonly asp-for="BorrowedArtist" class="form-control" />
                <span asp-validation-for="BorrowedArtist" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BorrowedTo" class="control-label"></label>
                <input asp-for="BorrowedTo" class="form-control" />
                <span asp-validation-for="BorrowedTo" class="text-danger"></span>
            </div>

            <br>
            <div class="form-group">
                <input type="submit" value="Redigera" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
    

<div>
    <a asp-action="Index">Tillbaka</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



