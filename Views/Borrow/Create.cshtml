@model Dt191G_moment3.Models.Borrow

@{
    ViewData["Title"] = "Create";
    
}

<h1>Låna album</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="AlbumId" class="form-control" />

            <div class="form-group">
                <label asp-for="BorrowedTitle" class="control-label"></label>
                <input readonly asp-for="BorrowedTitle" value="@ViewData["TitleBorrowAlbum"]" class="form-control" />
                <span asp-validation-for="BorrowedTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorrowedArtist" class="control-label"></label>
                <input readonly asp-for="BorrowedArtist" value="@ViewData["ArtistBorrowAlbum"]" class="form-control" />
                <span asp-validation-for="BorrowedArtist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorrowedTo" class="control-label"></label>
                <input asp-for="BorrowedTo" class="form-control" />
                <span asp-validation-for="BorrowedTo" class="text-danger"></span>
            </div>

            <br>
            
            <div class="form-group">
                <input type="submit" value="Låna" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
